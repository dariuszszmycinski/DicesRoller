<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/rollResultLabel">
    <TextView
            android:layout_width="128dp"
            android:layout_height="123dp"
            android:text="@string/rollResult"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.438" app:layout_constraintTop_toBottomOf="@+id/rollButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="sans-serif-black"
            android:gravity="center" android:id="@+id/rollResult" android:textSize="34sp"/>
    <Button
            android:text="Roll"
            android:layout_width="160dp"
            android:layout_height="88dp" android:id="@+id/rollButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="168dp"
            app:layout_constraintHorizontal_bias="0.784"/>
    <Button
            android:text="d6"
            android:layout_width="77dp"
            android:layout_height="86dp" android:id="@+id/diceTypeButton"
            app:layout_constraintTop_toTopOf="@+id/rollButton"
            app:layout_constraintBottom_toBottomOf="@+id/rollButton" app:layout_constraintVertical_bias="0.358"
            app:layout_constraintEnd_toStartOf="@+id/rollButton" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultsHistoryLabel"
            app:layout_constraintTop_toBottomOf="@+id/rollResult" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:text="@string/rollHistory"/>

</androidx.constraintlayout.widget.ConstraintLayout>