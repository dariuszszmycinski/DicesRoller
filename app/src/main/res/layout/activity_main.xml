<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/rollResultLabel">
    <TextView
            android:layout_width="128dp"
            android:layout_height="123dp"
            android:text="@string/rollResult"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.438" app:layout_constraintTop_toBottomOf="@+id/rollButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="sans-serif-black"
            android:gravity="center" android:id="@+id/rollResult" android:textSize="34sp"/>
    <Button
            android:text="Roll"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/rollButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/diceTypeButton" app:layout_constraintHorizontal_bias="0.808"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="168dp"/>
    <Button
            android:text="d6"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/diceTypeButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/rollButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.356"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultsHistoryLabel"
            app:layout_constraintTop_toBottomOf="@+id/rollResult" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:text="@string/rollHistory"/>
    <Button
            android:text="@string/dicesQuantity"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/dicesQuantityButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/diceTypeButton"
            app:layout_constraintTop_toTopOf="@+id/rollButton"
            app:layout_constraintBottom_toBottomOf="@+id/rollButton" app:layout_constraintHorizontal_bias="0.657"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/rollModificator"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/modificatorButton"
            app:layout_constraintStart_toEndOf="@+id/diceTypeButton" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/rollButton" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/rollButton"
            app:layout_constraintBottom_toBottomOf="@+id/rollButton" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>